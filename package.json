{
    "name": "gestion-home-upn-back-end",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "node ace serve --hmr",
        "build": "node ace build --production",
        "start": "node build/server.js",
        "seed": "node ace db:seed",
        "test": "node ace test",
        "typecheck": "tsc --noEmit",
        "lint": "eslint .",
        "format:eslint": "eslint --fix . --ext .ts",
        "format:prettier": "prettier --write ."
    },
    "imports": {
        "#controllers/*": "./app/controllers/*.js",
        "#exceptions/*": "./app/exceptions/*.js",
        "#models/*": "./app/models/*.js",
        "#mails/*": "./app/mails/*.js",
        "#services/*": "./app/services/*.js",
        "#tasks/*": "./app/tasks/*.js",
        "#helpers/*": "./app/helpers/*.js",
        "#enums/*": "./app/enums/*.js",
        "#listeners/*": "./app/listeners/*.js",
        "#events/*": "./app/events/*.js",
        "#middleware/*": "./app/middleware/*.js",
        "#validators/*": "./app/validators/*.js",
        "#constants/*": "./app/constants/*.js",
        "#providers/*": "./providers/*.js",
        "#policies/*": "./app/policies/*.js",
        "#abilities/*": "./app/abilities/*.js",
        "#database/*": "./database/*.js",
        "#start/*": "./start/*.js",
        "#tests/*": "./tests/*.js",
        "#config/*": "./config/*.js",
        "#resources": "./resources/*.js"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.8.2",
        "@adonisjs/prettier-config": "^1.4.4",
        "@adonisjs/tsconfig": "^1.4.0",
        "@japa/api-client": "^3.1.0",
        "@japa/assert": "^4.0.1",
        "@japa/plugin-adonisjs": "^4.0.0",
        "@japa/runner": "^4.2.0",
        "@swc/core": "1.11.24",
        "@types/luxon": "^3.7.1",
        "@types/node": "^22.15.18",
        "@types/pdfkit": "^0.17.3",
        "@types/qrcode": "^1.5.5",
        "hot-hook": "^0.4.0",
        "pino-pretty": "^13.0.0",
        "prettier": "^3.6.2",
        "ts-node-maintained": "^10.9.5",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@adonisjs/auth": "^9.5.1",
        "@adonisjs/bodyparser": "^10.1.0",
        "@adonisjs/bouncer": "^3.1.6",
        "@adonisjs/core": "^6.19.0",
        "@adonisjs/cors": "^2.2.1",
        "@adonisjs/lucid": "^21.6.1",
        "@adonisjs/mail": "^9.2.2",
        "@tanstack/react-query": "^5.90.3",
        "@vinejs/vine": "^3.0.1",
        "cloudinary": "^2.7.0",
        "edge.js": "^6.3.0",
        "luxon": "^3.7.1",
        "module-alias": "^2.2.3",
        "node-cron": "^4.2.1",
        "openai": "^5.23.1",
        "pdfkit": "^0.17.2",
        "pg": "^8.16.3",
        "qrcode": "^1.5.4",
        "reflect-metadata": "^0.2.2"
    },
    "hotHook": {
        "boundaries": [
            "./app/controllers/**/*.ts",
            "./app/middleware/*.ts"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "printWidth": 100
    }
}
